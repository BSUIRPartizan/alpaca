{
  "endpoint": "https://api.github.com",
  "version_prefix": "v1",
  "pagination": {
    "count": {
      "param": "count",
      "default": 10
    },
    "offset": {
      "param": "offset",
      "default": 0
    },
    "data": "data"
  },
  "resources": {
    "plan": {
      "properties": {
        "id": "string",
        "object": "identity",
        "livemode": "boolean",
        "amount": "integer",
        "currency": "string",
        "interval": "enum",
        "interval_count": "integer",
        "name": "string",
        "trial_period_days": "integer"
      },
      "actions": [
        {
          "name": "Create a plan"
          "method": "POST",
          "url": "/",
          "required": ["id", "amount", "currency", "interval", "name"],
          "optional": ["interval_count", "trial_period_days"],
          "return": "plan"
        },
        {
          "name": "Retrieve a plan",
          "method": "GET",
          "url": "/:plan-id",
          "required": ["id"],
          "return": "plan"
        },
        {
          "name": "Update a plan",
          "method": "POST",
          "url": "/:plan-id",
          "optional": ["name"],
          "return": "plan"
        },
        {
          "name": "Delete a plan",
          "method": "DELETE",
          "url": "/:plan-id",
          "required": ["id"],
          "return": "hash"
        },
        {
          "name": "List all plans",
          "method": "GET",
          "url": "/",
          "paging": true,
          "return": "page"
        }
      ]
    },
    "coupon": {
      "properties": {
        "id": "string",
        "object": "identity",
        "livemode": "boolean",
        "duration": "enum",
        "amount_off": "integer",
        "currency": "string",
        "duration_in_months": "integer",
        "max_redemptions": "integer",
        "percent_off": "integer",
        "redeem_by": "timestamp",
        "times_redeemed": "integer"
      },
      "actions": [
        {
          "name": "Create a coupon",
          "method": "POST",
          "url": "/",
          "required": ["duration"],
          "either": ["amount_off", "percent_off"],
          "optional": ["currency", "duration_in_months", "max_redemptions", "redeem_by"],
          "return": "coupon"
        },
        {
          "name": "Retrieve a coupon",
          "method": "GET",
          "url": "/:coupon-id",
          "required": ["id"],
          "return": "coupon"
        },
        {
          "name": "Delete a coupon",
          "method": "DELETE",
          "url": "/:coupon-id",
          "required": ["id"],
          "return": "hash"
        },
        {
          "name": "List all coupons",
          "method": "GET",
          "url": "/",
          "paging": true,
          "return": "page"
        }
      ]
    }
    "charge": {
      "properties": {
        "id": "string",
        "object": "identity",
        "livemode": "boolean",
        "amount": "integer",
        "captured": "boolean",
        "card": "resource",
        "currency": "string",
        "paid": "boolean",
        "refunded": "boolean",
        "refunds": "expand",
        ""
      }
    }
  }
}
