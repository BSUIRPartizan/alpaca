{
	"base": "https://api.bufferapp.com",
	"version": "1",
	"authorization": {
		"oauth" : true
	},
	"request": {
		"formats": {
			"default": "form",
			"json": false
		}
	},
	"response": {
		"formats": {
			"default": "json",
			"json": true
		},
		"suffix": true
	},
	"error": {
		"message": "error"
	},
	"class": {
		"info": {
			"show": {
				"path": "/info/configuration"
			}
		},
		"user": {
			"show": {
				"path": "/user"
			},
			"profiles": {
				"path": "/profiles"
			}
		},
		"link": {
			"shares": {
				"path": "/link/shares",
				"params": ["url"]
			}
		},
		"profile": {
			"args": ["id"],
			"get": {
				"path": "/profiles/:id"
			},
			"pending": {
				"path": "/profiles/:id/updates/pending",
				"paginate": true
			},
			"sent": {
				"path": "/profiles/:id/updates/sent",
				"paginate": true
			},
			"reorder": {
				"path": "/profiles/:id/updates/reorder",
				"method": "post",
				"body": ["order"]
			},
			"shuffle": {
				"path": "/profiles/:id/updates/shuffle",
				"method": "post"
			}
		},
		"schedule": {
			"args": ["id"],
			"list": {
				"path": "/profiles/:id/schedules"
			},
			"update": {
				"path": "/profiles/:id/schedules/update",
				"method": "post",
				"body": ["schedules"]
			}
		},
		"update": {
			"args": ["id"],
			"get": {
				"path": "/updates/:id"
			},
			"interactions": {
				"path": "/updates/:id/interactions",
				"paginate": true
			},
			"create": {
				"path": "/updates/create",
				"method": "post",
				"body": ["text", "profile_ids"]
			},
			"update": {
				"path": "/updates/:id/update",
				"method": "post",
				"body": ["text"]
			},
			"share": {
				"path": "/updates/:id/share",
				"method": "post"
			},
			"destroy": {
				"path": "/updates/:id/destroy",
				"method": "post"
			},
			"top": {
				"path": "/updates/:id/move_to_top",
				"method": "post"
			}
		}
	}
}
